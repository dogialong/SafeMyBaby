<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD47F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txtTileQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhites"
            android:text="Nên hay không nên ?"
            android:textStyle="bold"
            android:textSize="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"/>
        <ImageView
            android:id="@+id/imgQuestion"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_80sdp"
            android:background="@color/colorRuler"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnYes1"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_125sdp"
                android:background="@drawable/btn_yes"
                android:layout_marginLeft="@dimen/_35sdp"   android:layout_marginRight="@dimen/_110sdp"
               />

            <Button
                android:id="@+id/btnNo1"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_125sdp"
                android:background="@drawable/btn_no"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
